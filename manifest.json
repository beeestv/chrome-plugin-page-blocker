{
  "name": "Page Blocker",
  "description": "A chrome plugin to block some pages, in order to avoid loafing on the job.",
  "version": "0.1",
  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "bookmarks",
    "notifications"
  ],
  "background": {
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Page Blocker",
    "default_icon": "icon-true.png",
    "default_popup": "popup.html"
  },
  "manifest_version": 2,
  "content_security_policy": "script-src 'self' https://ajax.googleapis.com; object-src 'self'"
}